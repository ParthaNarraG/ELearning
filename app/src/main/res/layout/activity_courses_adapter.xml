<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_coursePhoto"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintDimensionRatio="0"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_coursePhoto"
        android:text="Course on Android Development"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_courseTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_courseTitle"
        app:layout_constraintLeft_toRightOf="@id/iv_coursePhoto"
        android:text="Course on Android Development"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:id="@+id/tv_courseInstructor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_courseInstructor"
        app:layout_constraintLeft_toRightOf="@id/iv_coursePhoto"
        android:text="Start Course"
        android:layout_marginTop="5dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/colorTwitter"
        android:id="@+id/tv_startCourse"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/iv_coursePhoto"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>